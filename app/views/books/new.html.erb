<!--  データ新規作成フォーム  -->

<!--  フラッシュメッセージ  -->
<div>
  <%= flash[:notice] %>
</div>

<h1>New book</h1>

<!--  バリデーションによるエラーメッセージ  -->
<% if @book.errors.any? %>
  <%= @book.errors.count %> errors prohibited this book from being saved:
  <ul>
    <% @book.errors.fill_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>


<%= form_with model: @book, url: '/books', method: :post do |f| %>

  <!--  Title  -->
  <p>Title</p>
  <%= f.text_field :title %>
  
  <!--  Body  -->
  <p>Body</p>
  <%= f.text_area :body %>
  
  <!--  送信ボタン  -->
  <%= f.submit 'Create Book' %>
  
  <%= link_to "Edit", edit_book_path(@book.id) %>
  <%= link_to "Destroy", book_path(@book.id), method: :delete, "date-confiem" => "本当に削除しますか？" %>

<% end %>


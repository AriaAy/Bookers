<!--  bookのデータ一覧ページ  -->
<h1>Books</h1>
<table>

  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
    </tr>
  </thead>


  <% @books.each do |book| %>
    <tr>
      <tb><%= book.title %></tb>
      <tb><%= book.body %></tb>
      <tb><%= link_to 'Show', book_path(book) %></tb>
      <tb><%= link_to 'Edit', edit_book_path(book) %></tb>
      <td><%= link_to 'Destroy', book_path(book), method: :delete, "data-confirm" => "Are you sure?" %></td>
  　</tr>
    </tr>
  <% end %>


</table>

